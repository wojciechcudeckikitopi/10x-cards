---
import { PasswordResetForm } from "../components/auth/PasswordResetForm";
import Layout from "../layouts/Layout.astro";

const token = Astro.url.searchParams.get("access_token");

// Redirect to password recovery if no token is provided
if (!token) {
  return Astro.redirect("/password-recovery");
}
---

<Layout title="Set New Password - 10x Cards">
  <div class="min-h-[calc(100vh-4rem)] flex items-center justify-center">
    <PasswordResetForm client:load token={token} />
  </div>
</Layout>
